
config system
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'
	option compat_version '1.0'
	option hostname 'Mikrotik-hAPac3-EF1F'
	option zonename 'Europe/Moscow'
	option timezone 'MSK-3MSD,M3.5.0,M10.5.0/3'

config timeserver 'ntp'
	option enabled '1'
	option enable_server '0'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'

config gpio_switch 'poe_passtrough'
	option name 'PoE Passthrough'
	option gpio_pin '452'
	option value '0'

config led 'led_wan'
	option name 'WAN'
	option sysfs 'green:wan'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'eth1'

config led 'led_lan1'
	option name 'LAN1'
	option sysfs 'green:lan1'
	option trigger 'switch0'
	option port_mask '0x10'

config led 'led_lan2'
	option name 'LAN2'
	option sysfs 'green:lan2'
	option trigger 'switch0'
	option port_mask '0x08'

config led 'led_lan3'
	option name 'LAN3'
	option sysfs 'green:lan3'
	option trigger 'switch0'
	option port_mask '0x04'

config led 'led_lan4'
	option name 'LAN4'
	option sysfs 'green:lan4'
	option trigger 'switch0'
	option port_mask '0x02'

config led 'led_poe'
	option name 'POE'
	option sysfs 'red:poe'
	option trigger 'gpio'
	option gpio '452'
	option inverted '0'

